<div class="card border-success mt-2 mb-5">
	<div class="card-header text-white">
		<h3><i class="far fa-images"></i> Recent Uploads</h3>
	</div>
	<div class="card-body">
		{{#if images}}
		<div class="row">
			{{#each images}}
			<div class="col-md-6 text-center">
				<a href="/images/{{this.uniqueId}}">
					<img src="/public/upload/{{this.filename}}" alt="{{this.title}}" class="w-100 mb-3">
				</a>
			</div>
			{{/each}}
		</div>
		{{else}}
		<h4 class="text danger">No images in the database</h4>
		{{/if}}
	</div>
</div>